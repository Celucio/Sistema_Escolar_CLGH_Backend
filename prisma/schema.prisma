// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum TipoPersona {
  E
  D
  A
}

enum Estado {
  A
  I
}

model Rol {
  id          Int          @id @default(autoincrement())
  nombreRol   String
  estado      Estado
  Persona_Rol PersonaRol[]
}

model Persona {
  id              Int             @id @default(autoincrement())
  nombre          String
  apellido        String
  cedula          String
  fechaNacimiento DateTime        @db.Date
  direccion       String
  correo          String
  celular         String
  tipoPersona     TipoPersona
  roles           PersonaRol[]
  matricula       Matricula[]
  notas           Act_Est_Notas[]
  Grado           Grado?
}

model PersonaRol {
  id        Int     @id @default(autoincrement())
  rol       Rol     @relation(fields: [rolId], references: [id])
  rolId     Int
  persona   Persona @relation(fields: [personaId], references: [id])
  personaId Int
  estado    Estado
}

model Periodo {
  id          Int         @id @default(autoincrement())
  anioLectivo String
  estado      Estado
  matricula   Matricula[]
}

model Grado {
  id          Int          @id @default(autoincrement())
  nombreGrado String
  asignatura  Asignatura[]
  matriculaId Matricula[]
  persona     Persona      @relation(fields: [persId], references: [id])
  persId      Int          @unique
}

model Matricula {
  id        Int     @id @default(autoincrement())
  estado    Estado
  persona   Persona @relation(fields: [idPersona], references: [id])
  idPersona Int
  periodo   Periodo @relation(fields: [idPeriodo], references: [id])
  idPeriodo Int
  grado     Grado   @relation(fields: [idGrado], references: [id])
  idGrado   Int
}

model PeriodoCalificaciones {
  id                 Int                     @id @default(autoincrement())
  nombrePeriodo      String
  actividadEducativa ActividadesEducativas[]
}

model TipoActividad {
  id                 Int                     @id @default(autoincrement())
  nombreActividad    String
  actividadEducativa ActividadesEducativas[]
  // actEdId Int
}

model ActividadesEducativas {
  id                    Int                   @id @default(autoincrement())
  titulo                String
  detalleActividad      String
  fechaInicio           DateTime              @db.Date
  fechaFin              DateTime              @db.Date
  tipoActividad         TipoActividad         @relation(fields: [tipoActId], references: [id])
  tipoActId             Int
  periodoCalificaciones PeriodoCalificaciones @relation(fields: [perCalId], references: [id])
  perCalId              Int
  asignatura            Asignatura            @relation(fields: [asignaturaId], references: [id])
  asignaturaId          Int
  notas                 Act_Est_Notas[]
}

model Asignatura {
  id            Int                     @id @default(autoincrement())
  nombreMateria String
  estado        Estado
  grado         Grado                   @relation(fields: [idGrado], references: [id])
  idGrado       Int
  actividades   ActividadesEducativas[]
}

model Act_Est_Notas {
  id          Int                   @id @default(autoincrement())
  persona     Persona               @relation(fields: [personaId], references: [id])
  personaId   Int
  actividades ActividadesEducativas @relation(fields: [actId], references: [id])
  actId       Int
  valor_nota  Float
}